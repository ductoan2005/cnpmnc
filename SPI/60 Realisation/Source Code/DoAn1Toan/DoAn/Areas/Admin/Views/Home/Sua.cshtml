
@{
    ViewBag.Title = "Sua";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sua</h2>
<form action="@Url.Action("ResultSua","Home")">
    <input type="hidden" name="id" id="id" value="@ViewBag.lt.LaptopID" />
    <div class="form-group">
        <label>Tên Sản Phẩm : </label>
        <div class="col-sm-6">
            <input type="text" name="tensp" id="tensp" placeholder="Nhập vào tên cần sửa" />
        </div>        
    </div>
    <div class="form-group">
        <label>Giá tiền : </label>
        <div class="col-sm-6">
            <input type="number" name="giatien" id="giatien" placeholder="Nhập vào giá tiền" />
        </div>
    </div>
    <div class="form-group">
        <label>Thông số : </label>
        <div class="col-sm-6">
            <textarea name="thongso" id="thongso" placeholder="Nhập vào thông số"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label> MaTH : </label>
        <div class="col-sm-6">
            <input type="number" id="MaTH" name="MaTH" placeholder="Nhập vào mã thương hiệu" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-outline-success" value="Sửa" />
    </div>
    
</form>

