
@{
    ViewBag.Title = "TimGanDung";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>TimGanDung</h2>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr style="text-align:center">
                    <th>ID</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Hình Ảnh</th>
                    <th>Giá Tiền</th>
                    <th>Tên Thương Hiệu</th>
                    <th>Thông Số</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.c)
                {
                    <tr>
                        <th>@item.LaptopID</th>
                        <th>@item.TenLaptop</th>
                        <th><img src="~/Areas/Content/img/@item.Image" style="width:150px;height:100px" /></th>
                        <th>@item.Giatien</th>
                        <th>@item.ThuongHieu.TenThuongHieu</th>
                        <th>@item.ThongSo</th>
                        <th style="text-align:center">
                            <a href="@Url.Action("Xoa","Home", new { id=item.LaptopID})" class="btn btn-outline-danger">Xoá</a>
                            <a href="@Url.Action("Sua","Home", new { id=item.LaptopID})" class="btn btn-outline-warning">Sửa</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

