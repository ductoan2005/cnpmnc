
@{
    ViewBag.Title = "TimTheoTen";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>TimTheoTen</h2>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr style="text-align:center">
                    <th>ID</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Giá Tiền</th>
                    <th>Tên Thương Hiệu</th>
                    <th>Thông Số</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.ds)
                {
                    <tr >
                        <th>@item.ID</th>
                        <th>@item.TenLaptop</th>
                        <th>@item.Giatien</th>
                        <th>@item.TenThuongHieu</th>
                        <th>@item.ThongSo</th>
                        <th style="text-align:center">
                            <a href="@Url.Action("Xoa","Home", new { id=item.ID})" class="btn btn-outline-danger">Xoá</a>
                            <a href="@Url.Action("Sua","Home", new { id=item.ID})" class="btn btn-outline-warning">Sửa</a>
                        </th>
                    </tr>
                }              
            </tbody>
        </table>
    </div>
</div>


